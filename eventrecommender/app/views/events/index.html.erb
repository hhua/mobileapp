<div data-role="page">
  <div data-role="header">
    <a href="#" data-icon="home">Home</a>
    <h4>Find Events</h4>
    <a href="index.html" data-icon="gear" class="ui-btn-right">Filter</a>
  </div>
  <div data-role="content">
    <input type="search" name="search-mini" id="search-mini" value="" data-mini="true" />
    <ul id="event-list" data-role="listview">
      <% @events.each do |event| %>
        <li>
          <%= link_to event, :class => "ui-link-inherit" do %>
            <img src="http://placehold.it/80" class="ui-li-thumb">
            <h3 class="ui-li-heading"><%= event.name %></h3>
            <p class="ui-li-desc"><%= event.location %></p>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <br />
  <div data-role="footer">
    <div data-role="navbar">
      <ul>
        <li><%= link_to 'Find Events', events_path %></li>
        <li><%= link_to 'My Events', events_path %></li>
        <li><%= link_to 'Settings', interests_path %></li>
      </ul>
    </div><!-- /navbar -->
  </div>
</div>

<%= link_to 'New Event', new_event_path %>
